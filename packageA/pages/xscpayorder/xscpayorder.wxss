.xsc_bg {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  z-index: -1;
}

.xsc_bg image {
  width: 100%;
  height: 100%;
}

.xsc_front {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.xsc_front .top {
  width: 684rpx;
  height: 316rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 26rpx 0rpx rgba(24, 24, 24, 0.08);
  border-radius: 15rpx;
  box-sizing: border-box;
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
}

.xsc_front .top .title {
  font-size: 36rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(42, 126, 251, 1);
  margin-top: 48rpx;
  margin-left: 38rpx;
}

.xsc_front .top .mid {
  display: flex;
  margin-top: 48rpx;
  margin-left: 38rpx;
}

.xsc_front .top .mid .time {
  flex-grow: 1;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.xsc_front .top .mid .price {
  font-size: 32rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #ed3938;
  margin-right: 38rpx;
}

.xsc_front .top .mid .huaxian {
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #999;
  margin-right: 10rpx;
  text-decoration: line-through;
}

.xsc_front .top .money {
  display: flex;
  margin-top: 48rpx;
  margin-left: 38rpx;
}

.xsc_front .top .money text {
  flex-grow: 1;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.xsc_front .top .money image {
  width: 90rpx;
  height: 48rpx;
  margin-right: 38rpx;
}

.xsc_front .realmoney {
  width: 684rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 26rpx 0px rgba(24, 24, 24, 0.08);
  border-radius: 15rpx;
  margin-top: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.realmoney .left {
  flex-grow: 1;
  margin-left: 38rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
}

.realmoney .right {
  margin-right: 38rpx;
  font-size: 30Fpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(237, 57, 56, 1);
}

.payshow {
  width: 528rpx;
  height: 85rpx;
  line-height: 85rpx;
  background: rgba(42, 126, 251, 1) !important;
  border-radius: 43px;
  color: white;
  margin-top: 96rpx;
}


