  align-items: center;
  justify-content: center;
  margin-left: 2rpx;
}

.bottom_botton2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 186rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(254, 153, 39, 1);
  border-radius: 30rpx;
}

.ques_num_list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.ques_num_list .ques_num {
  display: flex;
  width: 76rpx;
  height: 76rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(42, 126, 251, 1);
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}

.ques_num_list .ques_num.selected {
  border: 2rpx solid rgba(42, 126, 251, 1);
}

.ques_num_list .ques_num.unselected {
  border: 2rpx solid rgba(254, 108, 111, 1);
}

.xsc_bottom .treturn {
  display: flex;
