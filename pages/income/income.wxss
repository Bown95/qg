.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #ffbe08;
  z-index: -1;
}

.front {
  position: relative;
}

.front .head {
  position: relative;
  width: 750rpx;
  height: 650rpx;
}

.front .head image {
  width: 100%;
  height: 100%;
}

.front .head .text1 {
  position: absolute;
  left: 0rpx;
  top: 80rpx;
  width: 100%;
  text-align: center;
  font-size: 50rpx;
  color: white;
}

.front .head .text2 {
  position: absolute;
  left: 0rpx;
  top: 156rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: white;
}

.front .head .tixian {
  position: absolute;
  left: 305rpx;
  top: 268rpx;
  width: 120rpx;
  height: 44rpx;
  background: #fff;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.front .head .tixian text {
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(247, 100, 36, 1);
}

.front .list {
  position: fixed;
  width: 684rpx;
  background-color: #fff;
  left: 36rpx;
  border-radius: 16rpx;
  top: 360rpx;
  bottom: 34rpx;
  display: flex;
  flex-direction: column;
}

.list_title {
  position: relative;
  font-size: 48rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(14, 11, 14, 1);
  margin-left: 35rpx;
  margin-top: 40rpx;
}

.list_item_bg {
  flex-grow: 1;
  overflow-y: auto;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.list_item_bg image {
  width: 359rpx;
  height: 384rpx;
}

.list_item_outer {
  flex-grow: 1;
  overflow-y: auto;
  padding-bottom: 30rpx;
}

.list_item {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.list_item .left {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 40rpx;
}

.list_item .left .title {
  color: #0e0b0e;
  font-size: 30rpx;
}

.list_item .left .time {
  color: #a5a5a5;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.list_item .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list_item .right text {
  font-size: 36rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(14, 11, 14, 1);
}

.list_item .right image {
  width: 34rpx;
  height: 34rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
