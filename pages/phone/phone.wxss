.xsc_bg {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  z-index: -1;
}

.xsc_bg image {
  width: 100%;
  height: 100%;
}

.xsc_front {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.phoneview {
  width: 684rpx;
  height: 461rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 26rpx 0px rgba(24, 24, 24, 0.08);
  border-radius: 15rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.phoneview .title {
  font-size: 36rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-left: 36rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.phoneview .item {
  display: flex;
  margin-left: 36rpx;
  margin-right: 36rpx;
  height: 76rpx;
  align-items: center;
}

.phoneview .item .left {
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 150rpx;
}

.phoneview .item .input {
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(151, 151, 151, 1);
  flex-grow: 1;
}

.phoneview .item .rightbutton {
  width: 152rpx;
  height: 48rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(42, 126, 251, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.phoneview .item .rightbutton text {
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(42, 126, 251, 1);
}

.submit_button {
  width: 528rpx;
  height: 88rpx;
  background: rgba(42, 126, 251, 1);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
}

.submit_button text {
  font-size: 30rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
