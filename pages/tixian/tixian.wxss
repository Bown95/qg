.xsc_bg {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  z-index: -1;
}

.xsc_bg image {
  width: 100%;
  height: 100%;
}

.xsc_front {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.phoneview {
  width: 684rpx;
  height: 596rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 26rpx 0px rgba(24, 24, 24, 0.08);
  border-radius: 15rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.phoneview .title {
  margin-left: 36rpx;
  display: flex;
  align-items: center;
  height: 110rpx;
}

.phoneview .title .left {
  font-size: 38rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.phoneview .title .mid {
  font-size: 38rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: #eb5f53;
  margin-left: 10rpx;
}

.phoneview .title .right {
  font-size: 38rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.phoneview .jine {
  margin-left: 36rpx;
  margin-right: 36rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid rgba(230, 230, 230, 1);
  height: 110rpx;
  margin-bottom: 40rpx;
}

.phoneview .jine .jine_left {
  font-size: 66rpx;
  font-family: MicrosoftYaHei;
  font-weight: bold;
  color: rgba(17, 17, 17, 1);
}

.phoneview .jine .input_jine {
  font-size: 50rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  height: 100%;
  color: rgba(151, 151, 151, 1);
}

.phoneview .item {
  display: flex;
  margin-left: 36rpx;
  margin-right: 36rpx;
  height: 80rpx;
  align-items: center;
}

.phoneview .item .left {
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 150rpx;
}

.phoneview .item .input {
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(151, 151, 151, 1);
  flex-grow: 1;
}

.submit_button {
  width: 528rpx;
  height: 88rpx;
  background: rgba(42, 126, 251, 1);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
}

.submit_button text {
  font-size: 30rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
